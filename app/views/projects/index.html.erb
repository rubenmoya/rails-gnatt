<div class="card-columns">
  <% @projects.each do |project| %>
  <div class="card">
    <div class="card-block">
      <h4 class="card-title"><%= link_to project.name, project_path(project) %></h4>
    </div>
    <div class="card-footer text-muted small">
      <span data-toggle="tooltip" data-placement="top" title="<%= project.created_at.strftime('%d %B %Y') %>">
        <span class="fa fa-clock-o"></span> <%= time_ago_in_words(project.created_at) %> ago
      </span>
      <div class="pull-right">
        <span class="fa fa-sticky-note-o"></span> <%= pluralize(project.tasks.count, "task") %>
      </div>
    </div>
  </div>
  <% end %>
</div>
